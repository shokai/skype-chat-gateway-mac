!!! XHTML
%html
  %head
    %meta{:content => 'width=980px, user-scalable=no', :name => 'viewport'}
    %title
      != yield_content :title
    - unless mobile?
      %link{:rel => 'stylesheet', :href => "#{app_root}/main.css", :type => 'text/css'}
    - else
      %link{:rel => 'stylesheet', :href => "#{app_root}/mobile.css", :type => 'text/css'}
    %script{:type => 'text/javascript', :src => "#{app_root}/js/jquery.js"}
    != yield_content :head
  %body
    %div#content
      %div#header
        %div#link
          != yield_content :header_link
        %h1
          != yield_content :title
      %div#main
        != yield
      %hr
      %div#footer
        source code : 
        - src_url = 'https://github.com/shokai/skype-chat-gateway-mac'
        %a{:href => src_url} #{src_url}
